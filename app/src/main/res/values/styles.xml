<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_welcome_ac</item>
        <item name="colorPrimaryDark">@color/background_welcome_ac</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="MyActionbar" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/background_welcome_ac</item>
        <item name="colorPrimaryDark">@color/background_welcome_ac</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/background_welcome_ac</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:actionBarStyle">@style/MyActionbar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>
